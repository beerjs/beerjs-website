import NewsCard from "../NewsCard.astro";

---

<div class="w-full flex flex-col mt-[240px]" id="beercard">
  <section class="content">
    <h3>news</h3>
    <p>Stay up-to-date on what's up with Beer.js around the globe!</p>
    <div class="pt-[120px] flex flex-wrap gap-8">
      <NewsCard title="What's Beer.js?" date="2021-09-01" tags={["news", "event"]} link="/" description="Test one two" />
